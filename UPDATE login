  </div>    <script>  
    const RENDER_URL = "https://fweb-backend.onrender.com/fchat";  
  
    document.getElementById("login-btn").addEventListener("click", async () => {  
      const emailInput = document.getElementById("email").value.trim().toLowerCase();  
      const passwordInput = document.getElementById("password").value.trim();  
      const loginBtn = document.getElementById("login-btn");  
  
      if (!emailInput || !passwordInput) {  
        alert("Please enter email and password");  
        return;  
      }  
  
      loginBtn.textContent = "Logging in...";  
      loginBtn.disabled = true;  
  
      try {  
        const res = await fetch(RENDER_URL, {  
          method: "POST",  
          headers: { "Content-Type": "application/json" },  
          body: JSON.stringify({  
            action: "login",  
            email: emailInput,  
            password: passwordInput  
          })  
        });  
  
        const data = await res.json();  
  
        if (data.error) {  
          alert(data.error);  
        } else {  
          // Save user data first  
          localStorage.setItem("faccount", JSON.stringify(data.user));  
  
          if (data.status === "active") {  
            alert("Login successful!");  
            window.location.href = "dashboard.html";  
          } else if (data.status === "suspended") {  
            if (data.suspended_until) {  
              localStorage.setItem("suspended_until", data.suspended_until);  
            }  
            window.location.href = "fsuspend.html";  
          } else if (data.status === "banned") {  
            window.location.href = "fbanned.html";  
          } else {  
            alert("Unknown account status.");  
          }  
        }  
      } catch (err) {  
        alert("Error: " + err.message);  
      } finally {  
        loginBtn.textContent = "Login";  
        loginBtn.disabled = false;  
      }  
    });  
  
    document.getElementById("forgot-btn").addEventListener("click", () => {  
      window.location.href = "forgetpassword.html";  
    });  
  </script>  </body>  
</html>
